	</for>
        <for>
	  <type>and</type>
	  <field>permission</field>
	  <operator>notequal</operator>
	</for>
      </method>
      <method id="getCentersForUserAndIdLessThan">
	<type>get</type>
	<fields>
	  <field>id</field> <field>center</field> <field>status</field>
	</fields>
	<for>
	  <type>and</type>
	  <field>login</field>
	  <operator>equal</operator>
	</for>
        <for>
	  <type>and</type>
	  <field>id</field>
