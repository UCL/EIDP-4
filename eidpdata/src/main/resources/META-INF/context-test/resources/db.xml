	</fields>
	<for>
	  <type>and</type>
	  <field>login</field>
	  <operator>equal</operator>
	</for>
        <for>
	  <type>and</type>
	  <field>id</field>
	  <operator>let</operator>
	</for>
      </method>
      <method id="getCentersForUserAndIdGreaterThan">
	<type>get</type>
	<fields>
	  <field>id</field> <field>center</field> <field>status</field>
	</fields>
	<for>
	  <type>and</type>
	  <field>login</field>
	  <operator>equal</operator>
	</for>
        <for>
	  <type>and</type>
	  <field>id</field>
	  <operator>gt</operator>
	</for>
      </method>
      <method id="getCentersForUserAndIdGreaterEqualThan">
	<type>get</type>
	<fields>
	  <field>id</field> <field>center</field> <field>status</field>
	</fields>
	<for>
	  <type>and</type>
	  <field>login</field>
	  <operator>equal</operator>
	</for>
        <for>
	  <type>and</type>
	  <field>id</field>
	  <operator>get</operator>
	</for>
      </method>
      <method id="getCentersForUserAndIdIn">
	<type>get</type>
	<fields>
	  <field>id</field> <field>center</field> <field>status</field>
	</fields>
	<for>
	  <type>and</type>
	  <field>login</field>
	  <operator>equal</operator>
	</for>
        <for>
	  <type>and</type>
